@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<Project_G3.Models.Movie>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Picture/RWNgX1.jpg" alt="1">
            <div class="carousel-caption">
                <h3>Avengers</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Picture/Godzilla-VS-Kong-Poster-Header.png" alt="2">
            <div class="carousel-caption">
                <h3>Godzilla-VS-Kong</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Picture/wp2207620.jpg" alt="3">
            <div class="carousel-caption">
                <h3>X-Men</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div> <!-- Carousel -->

<div class="row">
    @{
        List<Project_G3.Models.Movie> random = new List<Project_G3.Models.Movie>();
        foreach (var Movie in Model)
        {
            random.Add(Movie);
        }
        Random rd = new Random();

        var RadomMovies = random.OrderBy(u => rd.Next()).Take(6);
        foreach (var item in RadomMovies)
        {
            <div class="col-md-2">
                <a href="@Url.Action("Info","Home",new { id = item.MovieId })">
                    <img id="col-img" src="@item.MoviePosters" />
                    @*@Html.ActionLink("More info", "Infor", new { id = Movie.MovieId })*@
                </a>
            </div>
        }
    }    
</div>
<hr class="solid">
<div class="row">
    @foreach (Project_G3.Models.Movie movie in Model)
    {
        <div class="column col-md-2">
            <h4 class="Mtitle">@movie.MovieTitle</h4>
            <p>Release Year: @movie.MovieReleaseYear</p>
            <a href="@Url.Action("Info","Home",new { id = movie.MovieId })">
                <img id="col-img" src="@movie.MoviePosters" />
            </a>
            <p>Movie Duration: @movie.MovieDuration</p>
            <p>Price :@movie.MoviePrice Kr</p>
            <a class="btn btn-default" href="@Url.Action("AddToCart","Home", new { Id = movie.MovieId })">Add To Cart</a>
        </div>

