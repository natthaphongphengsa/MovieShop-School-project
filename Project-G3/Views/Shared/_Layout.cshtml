<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MovieShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </form>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <Cart>
                    @*Om varukorgen är tomt visas inte någon siffra, annars visa antal filmer som finns i varukorgen brevid Varukorgn Icon*@
                    @if(@ViewBag.Amount == 0){}else{<p class="amount">@ViewBag.Amount</p>}                    
                    <a href="@Url.Action("Cart","Home")"><img src="~/Picture/unnamed.png" width="40" /></a>
                </Cart>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                        <b> Om oss </b>
                        <li>MovieShop grundades år 2021 och sedan dess </li>
                        <li>har bedrivit E-handel på Internet.</li>
                        <li>Inriktningen är online filmer.</li>

                    </ul>
                     </div>
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                       <b> Adress</b>
                        <li>Hamngatan 27</li>
                        <li>58226 Linköping</li>
                        </ul>
                </div>
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                        <b>Kontakt</b>
                        <li>Tel. 070-7625665</li>
                        <li>e-post: info@movie-shop.com</li>
                    </ul>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
