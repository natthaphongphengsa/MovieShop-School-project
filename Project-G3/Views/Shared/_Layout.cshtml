<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <Cart class="pull-right">
                    @*Om varukorgen är tomt visas inte någon siffra, annars visa antal filmer som finns i varukorgen brevid Varukorgn Icon*@
                    @if (@ViewBag.Amount == 0) { }
                    else
                    {
                        <span class='amount badge badge-warning w3-container w3-center w3-animate-top' id='lblCartCount'>@ViewBag.Amount</span>
                    }
                    <a href="@Url.Action("Cart","Home")"><img src="~/Picture/unnamed.png" width="40" /></a>
                </Cart>
                <a href="@Url.Action("Index","Home")" style="text-decoration: none; color: whitesmoke;">
                    @*@Html.ActionLink("MovieShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <img src="~/Picture/free-movie-icon-850-thumb.png" width="48" />
                    MovieShop
                </a>
                <div class="Seach input-group">
                    <input type="text" placeholder="Sök bland över 18 000 produkter" class="form-control" style="margin-top:5px;">
                    <span class="input-group-btn">
                        <button type="button" aria-label="search-button" class="btn btn-primary" style="margin-top:5px;">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <!--<div class="input-group">-->
    @*<input type="text" class="form-control" placeholder="Search">*@
    <!--<input type="text" placeholder="Sök bland över 18 000 produkter" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" class="form-control">
    <span class="input-group-btn"><button type="button" aria-label="search-button" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button></span>-->
    @*<button type="submit" class="btn btn-default">
            Search
        </button>*@
    <!--</div>-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                        <b> Om oss </b>
                        <li>MovieShop skapades för och av filmälskare.</li>
                        <li>Den grundades år 2021 och sedan dess </li>
                        <li>har bedrivit E-handel på Internet.</li>
                        <li>Inriktningen är online filmer.</li>

                    </ul>
                </div>
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                        <b> Adress</b>
                        <li>Hamngatan 27</li>
                        <li>58226 Linköping</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul style="list-style-type:none">
                        <b>@Html.ActionLink("Kontakta oss", "Contact")</b>
                        @*<b>Kontakt</b>
                            <li>Tel. 070-7625665</li>
                            <li>e-post: info@movie-shop.com</li>*@
                    </ul>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - MovieShop Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
