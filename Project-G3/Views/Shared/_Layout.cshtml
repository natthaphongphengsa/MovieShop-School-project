<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MovieShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </form>            
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <Cart><a href="@Url.Action("Cart","Home")"><img src="~/Picture/unnamed.png" width="40" /></a></Cart>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @*<div class="underNav navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Genre", "Movie", "Home")</li>
                <li>@Html.ActionLink("Nyheter", "About", "Home")</li>
                <li>@Html.ActionLink("Erbjudande", "Contact", "Home")</li>
            </ul>
        </div>*@
        <div class="underNav navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li role="presentation" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        Genre <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @*@foreach (var item in collection)
                {
                    <li></li>
                }*@
                        <li>@Html.ActionLink("Drama", "About", "Home")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Nyheter", "About", "Home")</li>
                <li>@Html.ActionLink("Erbjudande", "About", "Home")</li>
            </ul>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-4">
                    <ul>Om oss
                        <li>Movie Company</li>
                    </ul>                                        
                </div>
                <div class="col-md-4">
                    <ul>
                        Kontakta oss
                        <li></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul>
                        Kundtjänst
                        <li></li>
                    </ul>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
